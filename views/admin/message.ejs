<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Ink Touch - Large Format Printing</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="../../img/ink.jpg" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link
      href="../../lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link
      href="../../lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="../../css/style.css" rel="stylesheet" />
    <link href="../../css/viewBtn.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
      <%- include (`../partials/adminHeader`); -%>

      <!-- Content Start -->
      <div class="content">
        <!-- Navbar Start -->
        <%- include (`../partials/adminNav`); -%>
        <!-- Navbar End -->

        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
          <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
              <h6 class="mb-0">Chat with users</h6>
            </div>
            <div class="container p-0">
              <div class="card">
                <div class="row g-0">
                  <div
                    class="col-12 col-lg-5 col-xl-3 border-right"
                    style="height: 530px; overflow-y: scroll"
                  >
                    <!-- User list -->
                    <div
                      id="user-list"
                      class="list-group"
                      style="cursor: pointer"
                    >
                      <% existingUsers.forEach((user) => { %>
                      <a
                        href="#"
                        class="list-group-item list-group-item-action"
                        onclick="selectUser('<%= user._id %>', '<%= user.name %>')"
                      >
                        <!-- Display user image if available -->
                        <% if (user && user.image && user.image.imageUrl) { %>
                        <img
                          src="<%= user.image.imageUrl %>"
                          alt="<%= user.name %>"
                          class="user-image"
                          style="
                            width: 50px;
                            height: 50px;
                            border-radius: 50%;
                            margin-right: 10px;
                          "
                        />
                        <% } else { %>
                        <!-- Fallback image if user has no image -->
                        <img
                          src="https://bootdey.com/img/Content/avatar/avatar5.png"
                          alt="<%= user.name %>"
                          class="user-image"
                          style="
                            width: 50px;
                            height: 50px;
                            border-radius: 50%;
                            margin-right: 10px;
                          "
                        />
                        <% } %> <%= user.name %>
                      </a>
                      <% }) %>
                    </div>

                    <hr class="d-block d-lg-none mt-1 mb-0" />
                  </div>

                  <div class="col-12 col-lg-7 col-xl-9">
                    <div class="position-relative">
                        <div id="selected-user-name" class="p-2 bg-primary text-white" style="border-radius: 4px;">
                            <!-- Username will be inserted here dynamically -->
                          </div>

                      <div
                        id="admin-chat-messages"
                        class="chat-messages p-4"
                        style="
                          height: 400px;
                          overflow-y: auto;
                          border: 1px solid #ddd;
                          border-radius: 4px;
                        "
                      >
                        <!-- Chat messages will be inserted here dynamically -->
                      </div>
                    </div>
                    <div id="admin-image-preview" class="mb-2"></div>
                    <div class="typing-indicator">
                      <small class="text-muted"><em></em></small>
                    </div>
                    <div class="flex-grow-0 py-3 px-4 border-top">
                      <form
                        id="admin-chat-form"
                        onsubmit="sendAdminMessage(); return false;"
                      ></form>
                      <div class="row">
                        <div class="col-12">
                          <textarea
                            class="form-control"
                            rows="2"
                            id="admin-message"
                            placeholder="Enter your message..."
                          ></textarea>
                        </div>
                        <div class="col-12 mt-2">
                          <div class="input-group">
                            <label
                              for="admin-image-upload"
                              class="btn btn-primary mr-2"
                            >
                              <i class="fas fa-camera"></i> Upload Image
                            </label>
                            <input
                              type="file"
                              id="admin-image-upload"
                              class="d-none"
                            />
                            <button
                              class="btn btn-primary"
                              onclick="sendAdminMessage()"
                            >
                              Send
                            </button>
                          </div>
                        </div>
                      </div>
                    </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Recent Sales End -->

        <!-- Footer Start -->
        <%- include (`../partials/adminFooter`); -%>
        <!-- Footer End -->
      </div>
      <!-- Content End -->
      <script>
     let selectedUserId = null;

function selectUser(userId, userName) {
  selectedUserId = userId;

  // Display selected user's name in the fixed header
  document.getElementById('selected-user-name').textContent = `Chatting with ${userName}`;

  // Load messages for the selected user
  fetchMessages(userId);
}

async function fetchMessages(userId) {
  try {
    const response = await fetch(`/admin/message/${userId}`);
    const data = await response.json();

    if (data.success) {
      const messagesContainer = document.getElementById('admin-chat-messages');
      messagesContainer.innerHTML = ''; // Clear previous messages, but leave the username header alone

      data.messages.forEach((message) => {
        const messageDiv = document.createElement('div');
        messageDiv.classList.add('message');
        messageDiv.innerHTML = `
          <strong>${message.sender === 'Admin' ? 'Admin' : 'User'}:</strong> ${message.content}
          <div><small>${new Date(message.createdAt).toLocaleString()}</small></div>
        `;
        messagesContainer.appendChild(messageDiv);
      });
    }
  } catch (error) {
    console.error('Error fetching messages:', error);
  }
}

      </script>

      
      <script>
        document.getElementById('admin-message').addEventListener('keydown', function (event) {
  if (event.key === 'Enter' && !event.shiftKey) {
    event.preventDefault(); 
    sendAdminMessage(); 
  }
});

async function sendAdminMessage() {
  const messageContent = document.getElementById('admin-message').value;

  if (!selectedUserId || !messageContent.trim()) {
    alert('Please select a user and enter a message.');
    return;
  }

  try {
    const response = await fetch('/admin/message', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        userId: selectedUserId,
        content: messageContent,
      }),
    });

    const data = await response.json();
    if (data.success) {
      document.getElementById('admin-message').value = ''; 
      fetchMessages(selectedUserId);
      scrollToBottom(); 
    } else {
      console.error('Failed to send message:', data.message);
    }
  } catch (error) {
    console.error('Error sending message:', error);
  }
}

      </script>
      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"
        ><i class="bi bi-arrow-up"></i
      ></a>
    </div>
  </body>
</html>
