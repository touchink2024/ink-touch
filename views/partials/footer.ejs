<script>
  const baseUrl =
    window.location.hostname === 'localhost'
      ? 'http://localhost:8080/'
      : 'https://inktouch.onrender.com/';

  jQuery(document).ready(function ($) {
    let lastFetchedTime = null;

    async function fetchAdminMessages() {
      try {
        const url = lastFetchedTime
          ? `${baseUrl}user/messages?lastFetchedTime=${lastFetchedTime}`
          : `${baseUrl}user/messages`;
        const response = await fetch(url);
        const data = await response.json();

        if (data.success) {
          const messagesContainer = $('.Messages_list');

          if (Array.isArray(data.messages) && data.messages.length > 0) {
            data.messages.reverse().forEach((msg) => {
              const avatarUrl =
                msg.adminImage ||
                'https://mrseankumar25.github.io/Sandeep-Kumar-Frontend-Developer-UI-Specialist/images/avatar.png';

              const messageHtml = `
      <div class="msg msgStyling" data-sender-id="${msg.senderId}">
        <span class="avtr">
          <figure style="background-image: url('${avatarUrl}')"></figure>
        </span>
        <div class="message-details">
          <div class="message-header">
            <div class="Message_name">${msg.name}</div>
            <span class="responsText">${msg.content}</span>
          </div>
        </div>
      </div>
    `;
              messagesContainer.append(messageHtml);
            });

            const lastMessage = data.messages[data.messages.length - 1];
            lastFetchedTime = lastMessage.createdAt;

            $('#recipientId').val(
              data.messages[data.messages.length - 1].senderId
            );
          }

          scrollToBottom();
        }
      } catch (error) {
        console.error('Error fetching messages:', error);
      }
    }

    setInterval(fetchAdminMessages, 5000);

    function scrollToBottom() {
      const messagesContainer = $('.Messages_list');
      messagesContainer.scrollTop(messagesContainer.prop('scrollHeight'));
    }

    jQuery(document).on('click', '.iconInner', function () {
      jQuery(this).parents('.botIcon').addClass('showBotSubject');
      $("[name='msg']").focus();
      fetchAdminMessages();
    });

    // Close the popup
    jQuery(document).on('click', '.closeBtn, .chat_close_icon', function () {
      jQuery(this).parents('.botIcon').removeClass('showBotSubject');
      jQuery(this).parents('.botIcon').removeClass('showMessenger');
    });

    jQuery(document).on('submit', '#messenger', function (e) {
      e.preventDefault();

      const messageContent = $("[name='msg']").val().trim();
      const recipientId = $('#recipientId').val();

      if (messageContent && recipientId) {
        const messageHtml = `
          <div class="message user-message">
            ${messageContent}
          </div>
        `;
        $('.Messages_list').append(messageHtml);

        $("[name='msg']").val('');
        scrollToBottom();

        $.ajax({
          type: 'POST',
          url: `${baseUrl}user/reply`,
          data: JSON.stringify({
            content: messageContent,
            recipientId: recipientId,
          }),
          contentType: 'application/json',
          success: function (response) {
            if (response.success) {
            } else {
              console.error('Failed to send message');
            }
          },
          error: function (error) {
            console.error('Error sending message:', error);
          },
        });
      }
    });
  });
</script>
